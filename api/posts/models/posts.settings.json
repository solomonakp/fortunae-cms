{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "posts",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "featured": {
      "type": "boolean"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "author": {
      "via": "posts",
      "model": "authors"
    },
    "tags": {
      "via": "post",
      "collection": "tags"
    }
  }
}
